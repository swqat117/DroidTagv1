<?xml version="1.0" encoding="utf-8"?>


<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentStart="true"
    android:layout_alignParentTop="true"
    android:layout_margin="2dp"
    android:alpha=".8"
    android:padding="4dp"
    card_view:cardBackgroundColor="@color/soft_white"

    card_view:cardCornerRadius="5dp"
    card_view:cardElevation="2dp">

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ImageView
            android:id="@+id/iv_icon_alert"
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:layout_below="@+id/customer_tracking_id"
            android:layout_marginStart="4dp"
            android:src="@drawable/message_alert" />


        <TextView
            android:id="@+id/source_location"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/source_company_name"
            android:layout_marginStart="8dp"
            android:layout_toEndOf="@+id/iv_icon_alert"
            android:ellipsize="middle"
            android:fontFamily="sans-serif"
            android:maxLines="1"
            android:maxWidth="80dp"
            android:padding="3dp"
            android:text="MAA"

            android:textColor="@color/colorPrimaryDark"
            android:textSize="14sp" />


        <TextView
            android:id="@+id/source_company_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/source_location"
            android:layout_below="@+id/customer_tracking_id"
            android:ellipsize="marquee"
            android:fontFamily="sans-serif"
            android:maxLines="1"
            android:maxWidth="150dp"
            android:padding="2dp"
            android:text="Tata Consultancy services"
            android:textColor="@color/indicator_blue_shade_dark"
            android:textSize="12sp"
            android:textStyle="italic" />


        <com.quascenta.petersroad.droidtag.widgets.Line_view
            android:id="@+id/line4"
            layout="@layout/lineview"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/destination_company_name"


            android:layout_toEndOf="@+id/source_location"
            android:padding="4dp">

        </com.quascenta.petersroad.droidtag.widgets.Line_view>

        <TextView
            android:id="@+id/destination_company_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_alignParentEnd="true"
            android:layout_below="@+id/customer_tracking_id"
            android:layout_marginEnd="12dp"
            android:ellipsize="marquee"
            android:fontFamily="sans-serif"
            android:gravity="right"
            android:maxLines="1"
            android:text="Tata Consultancy services"
            android:textColor="@color/indicator_blue_shade_dark"
            android:textSize="12sp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/destination_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/source_location"
            android:layout_alignEnd="@+id/destination_company_name"
            android:layout_below="@+id/source_company_name"
            android:ellipsize="middle"
            android:fontFamily="sans-serif"
            android:maxLines="1"
            android:maxWidth="100dp"
            android:padding="4dp"
            android:text="IND"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/customer_tracking_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed"
            android:padding="2dp"
            android:text="#1235487"
            android:textColor="@color/colorPrimaryDark"


            />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_icon_alert"
            android:layout_marginTop="10dp">

            <View
                android:id="@+id/vx1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="1dp"
                android:background="@color/colorAccent" />

            <TextView
                android:id="@+id/device_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="2dp"
                android:paddingEnd="4dp"
                android:paddingStart="2dp"
                android:paddingTop="4dp"
                android:text=" Quintic BLE"
                android:textColor="@color/colorPrimaryDark" />

            <TextView
                android:id="@+id/transaction_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignTop="@+id/vx1"

                android:paddingBottom="2dp"
                android:paddingEnd="4dp"
                android:paddingStart="2dp"
                android:paddingTop="4dp"
                android:text="Trans ID: 1223422345"
                android:textColor="@color/colorPrimaryDark" />
        </RelativeLayout>
    </RelativeLayout>

</android.support.v7.widget.CardView>

