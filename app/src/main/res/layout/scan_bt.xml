<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/semi_transparent_black"
    android:orientation="vertical">

    <com.skyfishjy.library.RippleBackground xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/content"

        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_centerInParent="true"
        android:layout_marginEnd="4dp"
        android:layout_marginStart="4dp"
        app:rb_color="@color/colorPrimary"
        app:rb_duration="3000"
        app:rb_radius="32dp"
        app:rb_rippleAmount="6"
        app:rb_scale="6">

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:padding="8dp"
            android:src="@drawable/ic_bluetooth_audio_24dp"
            app:backgroundTint="@color/colorPrimary"
            app:borderWidth="0dp"
            app:fab_colorNormal="@color/colorPrimary" />

        <com.quascenta.petersroad.droidtag.widgets.Device
            android:id="@+id/fd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/fd1"
            android:layout_marginEnd="57dp"
            android:padding="8dp"
            android:visibility="gone" />

        <com.quascenta.petersroad.droidtag.widgets.Device
            android:id="@+id/fd2"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="26dp"
            android:layout_marginEnd="44dp"
            android:visibility="gone" />

        <com.quascenta.petersroad.droidtag.widgets.Device
            android:id="@+id/fd3"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/fd2"
            android:layout_marginStart="26dp"
            android:padding="8dp"
            android:visibility="gone" />

        <com.quascenta.petersroad.droidtag.widgets.Device
            android:id="@+id/fd1"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/floatingActionButton2"
            android:layout_marginStart="17dp"
            android:layout_marginTop="17dp"
            android:padding="8dp"
            android:visibility="gone" />

    </com.skyfishjy.library.RippleBackground>

</RelativeLayout>