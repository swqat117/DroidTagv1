<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:orientation="vertical">


    <ImageView
        android:id="@+id/iv1_icon_start"
        android:layout_width="30dp"
        android:layout_height="20dip"
        android:layout_marginStart="-4dp"
        android:alpha="1"
        android:src="@drawable/ic_place_black_24dp" />

        <TextView
            android:id="@+id/start_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elegantTextHeight="true"
            android:text="Jan 6"
            android:textAlignment="viewStart"
            android:textAllCaps="false"
            android:textSize="10sp"
            android:textStyle="bold" />
    </LinearLayout>
    <View
        android:id="@+id/view1_horizontal_line"
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:layout_marginEnd="-8dp"
        android:layout_marginStart="-12dp"
        android:layout_marginTop="12dp"
        android:layout_weight="1"
        android:alpha=".8"
        android:background="#f44336" />

    <RelativeLayout
        android:layout_width="50dip"
        android:layout_height="50dip">

        <ImageView
            android:id="@+id/iv2_icon_alert"
            android:layout_width="30dp"
            android:layout_height="20dip"
            android:layout_gravity="top"
            android:alpha="1"
            android:src="@drawable/ic_error_black_24dp" />

        <TextView
            android:id="@+id/tv_status_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"


            android:layout_alignParentStart="true"
            android:layout_below="@+id/iv2_icon_alert"
            android:layout_gravity="bottom"
            android:text="Data is not uploaded"
            android:textSize="8sp"
            android:textStyle="bold" />
    </RelativeLayout>


    <View
        android:id="@+id/view2_horizontal_line"
        android:layout_width="0dp"
        android:layout_height="2dip"
        android:layout_marginStart="-28dp"
        android:layout_marginTop="12dp"
        android:layout_weight="1"
        android:alpha=".8"
        android:background="#f44336" />

    <ImageView
        android:id="@+id/iv3_icon_alert"
        android:layout_width="20dp"
        android:layout_height="20dip"
        android:layout_marginStart="-10dp"
        android:layout_marginTop="3dp"
        android:alpha="1"
        android:paddingEnd="1dp"
        android:paddingStart="1dp"
        android:src="@drawable/ic_chevron_right_black_24dp" />
</LinearLayout>
