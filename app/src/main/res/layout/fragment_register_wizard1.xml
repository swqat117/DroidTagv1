<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/semi_transparent_black"

    >

    <LinearLayout
    android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/semi_transparent_black"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/activity_horizontal_margin">

    <android.support.design.widget.TextInputLayout
        style="@style/TextInputLayoutDesign"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="12dp"
        app:hintTextAppearance="@style/TextAppearance.App.TextInputLayout">

        <com.quascenta.petersroad.droidtag.widgets.FormEditText
            android:id="@+id/full_name"
            style="@style/StyledTilEditText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="@string/fullName"
            android:inputType="textPersonName"
            android:textColor="@color/colorAccent" />

    </android.support.design.widget.TextInputLayout>


    <android.support.design.widget.TextInputLayout
        style="@style/TextInputLayoutDesign"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="12dp"
        app:hintTextAppearance="@style/TextAppearance.App.TextInputLayout">

        <com.quascenta.petersroad.droidtag.widgets.FormEditText
            android:id="@+id/email"
            style="@style/StyledTilEditText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="@string/email"
            android:inputType="textEmailAddress"
            android:textColor="@color/colorAccent" />

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        style="@style/TextInputLayoutDesign"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="12dp"
        app:hintTextAppearance="@style/TextAppearance.App.TextInputLayout">

        <com.quascenta.petersroad.droidtag.widgets.FormEditText
            android:id="@+id/password"
            style="@style/StyledTilEditText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="@string/hint_password"
            android:inputType="textPassword"
            android:textColor="@color/colorAccent" />
    </android.support.design.widget.TextInputLayout>


    <android.support.design.widget.TextInputLayout
        style="@style/TextInputLayoutDesign"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="12dp"
        app:hintTextAppearance="@style/TextAppearance.App.TextInputLayout">

        <com.quascenta.petersroad.droidtag.widgets.FormEditText
            android:id="@+id/confirm_password"
            style="@style/StyledTilEditText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="Confirm Password"
            android:inputType="textPassword"
            android:textColor="@color/colorAccent"

            />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        style="@style/TextInputLayoutDesign"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="12dp"
        app:hintTextAppearance="@style/TextAppearance.App.TextInputLayout">

        <com.quascenta.petersroad.droidtag.widgets.FormEditText
            android:id="@+id/working_orginasation"
            style="@style/StyledTilEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Working Organization/Company"
            android:inputType="textPersonName"
            android:textColor="@color/colorAccent"

            />

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        style="@style/TextInputLayoutDesign"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="12dp"
        app:hintTextAppearance="@style/TextAppearance.App.TextInputLayout">

        <com.quascenta.petersroad.droidtag.widgets.FormEditText
            android:id="@+id/address"
            style="@style/StyledTilEditTextAddress"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="Address"
            android:inputType="textPostalAddress"
            android:textColor="@color/colorAccent"

            />

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        style="@style/TextInputLayoutDesign"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="12dp"
        app:hintTextAppearance="@style/TextAppearance.App.TextInputLayout">

        <com.quascenta.petersroad.droidtag.widgets.FormEditText
            android:id="@+id/state_province"
            style="@style/StyledTilEditText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="Province"
            android:inputType="textPostalAddress"
            android:textColor="@color/colorAccent"

            />

    </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            style="@style/TextInputLayoutDesign"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="12dp"
            app:hintTextAppearance="@style/TextAppearance.App.TextInputLayout">

            <com.quascenta.petersroad.droidtag.widgets.FormEditText
                android:id="@+id/pin_code"
                style="@style/StyledTilEditTextNumber"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="Pincode"
                android:inputType="number"
                android:textColor="@color/colorAccent" />
        </android.support.design.widget.TextInputLayout>


        <android.support.design.widget.TextInputLayout
                style="@style/TextInputLayoutDesign"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="12dp"
                app:hintTextAppearance="@style/TextAppearance.App.TextInputLayout">

                <com.quascenta.petersroad.droidtag.widgets.FormAutoCompleteTextView
                    android:id="@+id/Country"
                    style="@style/StyledTilEditText"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="Country"
                    android:textColor="@color/colorAccent" />
            </android.support.design.widget.TextInputLayout>


        <android.support.design.widget.TextInputLayout
                style="@style/TextInputLayoutDesign"
                android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="12dp"
                app:hintTextAppearance="@style/TextAppearance.App.TextInputLayout">

            <com.quascenta.petersroad.droidtag.widgets.FormEditText
                    android:id="@+id/mobile_number"
                style="@style/StyledTilEditTextNumber"
                    android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="Mobile No."
                android:inputType="number"

                android:textColor="@color/colorPrimary" />
            </android.support.design.widget.TextInputLayout>


        <!-- Link to Login Screen -->


    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="center|bottom"
        android:layout_marginBottom="20dp"
        android:visibility="gone" />

</LinearLayout>
</ScrollView>
